class cSpeedMul
{
	float mfValue;
	float mfTarget;
	float mfSpeed;
	
	void UpdateFade(float afTimeStep)
	{
		if(mfValue != mfTarget)
			mfValue = cMath_IncreaseTo(mfValue, mfSpeed * afTimeStep, mfTarget);
	}
}

