		pLight.SetFalloffPow(cScript_GetGlobalArgFloat(3));
		pLight.SetScriptableIsSaved(false);
		pLight.SetTranslucency(0.0f);
		mvPlayerLights.push_back(pLight.GetID());
		
		cScript_SetGlobalReturnID(pLight.GetID());
	}
	
