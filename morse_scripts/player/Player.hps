	void Lean(float afDir)
	{
		////////////////////
		// Sneaky var to keep track on when the player last leaned
		tString sMapName = cLux_GetCurrentMap().GetName();
		int lLevel = cString_ToInt(cString_Sub(sMapName, 1, 1) + cString_Sub(sMapName, 4, 1), 0);
