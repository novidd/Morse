			}
			else if (Sequence_DoStepAndWait(0.5f))
			{
				FadeInOutMicroFlash("Out");
			}
			else if (Sequence_DoStepAndWait(0.0f)) // 2.0f
			{
				FadeInOutMicroFlash("In");
