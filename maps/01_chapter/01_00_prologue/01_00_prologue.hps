		bool OnCollide_KnockOverWineBottle(const tString &in asParent, const tString &in asChild, int alState)
		{
			tString msWineBottleArea = Entity_GetVarString(asParent, "");
			if (Entity_GetVarBool(msWineBottleArea, ""))
			{
				cLux_AddDebugMessage("Knocking over bottle...");
				
				Entity_AddForce("wine_bottle", cVector3f(20.f, 0.f, 0.f), false, true);
				Map_AddTimer("Timer_KillMatch", 0.f, "OnTimer_KillMatch");
				return false;
			}
			return true;
		}
		
