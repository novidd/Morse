				Sound_CreateAtEntity("", "creatures/vocalisations/creature/ghoul/ghoul_exit_hole", "ghoul_intro_cave", 0.1f, false, 0.75f);
			}
			else if (Sequence_DoStepAndWait(0.0f)) // 5.0f
