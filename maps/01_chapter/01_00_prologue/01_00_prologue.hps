			mbStartIntro = false;
			
			if (!mbStartIntro)
			{
				Light_SetVisible("Light_Intro_*", false);
				Lamp_SetLit("brazier_intro_1", false, false);
			}
			
			if (ItemType_GetCountInInventory("Lantern") < 1)
			{
				Item_AddToInventory("Lantern");

				Lantern_SetAmount(10);
			}
		}
		
