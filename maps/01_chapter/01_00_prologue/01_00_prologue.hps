	void OnConnectionStateChange_ShedLock(const tString &in asEntity, int alState)
	{
		tString sDoor = "ShedMain_" + Entity_GetVarString(asEntity, "");
		bool bLocked = alState == 1;
		
		cLux_AddDebugMessage("Shed door is locked: " + bLocked);
		SwingDoor_SetLocked(sDoor, bLocked, true);
		SwingDoor_SetBlocked(sDoor, bLocked, true);
	}
	
	//-------------------------------------------------------
	
	void OnPlayerInteract_ShedCandle(const tString &in asEntity)
	{	
		// The use of a timer is necessary because Lamp_GetLit() returns false at the moment you light a lamp
		Map_AddTimer(asEntity, 0.33f, "CheckIfCandleLit");
	}
	
	void CheckIfCandleLit(const tString&in asTimer)
	{
		bool bIsLit = Lamp_GetLit(asTimer);
		tString sLamp = "Light_" + Entity_GetVarString(asTimer, "");
		
		Light_SetVisible(sLamp, bIsLit);
		
		if (bIsLit)
		{
			Sound_CreateAtEntity("shed_candle_burn_"+asTimer, "level_entity_shared/fire/wall_torch/wall_torch_burn", asTimer, 0.0f, false, 1.0f/3);
			return;
		}
		else
		{
			Sound_Stop("shed_candle_burn_"+asTimer, 0.5f);
			return;
		}
	}

