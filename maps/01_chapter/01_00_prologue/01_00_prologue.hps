		void UpdateAltarSpotlight()
		{
			if (Lamp_GetLit("candle_altar_1") && Lamp_GetLit("candle_altar_2"))
			{
				Light_FadeBrightnessTo("candle_altar_spotlight", 2.f, .5f);
			}
			else if (Lamp_GetLit("candle_altar_1") && !Lamp_GetLit("candle_altar_2")
					|| !Lamp_GetLit("candle_altar_1") && Lamp_GetLit("candle_altar_2"))
			{
				Light_FadeBrightnessTo("candle_altar_spotlight", 1.f, .5f);
			}
			else if (!Lamp_GetLit("candle_altar_1") && !Lamp_GetLit("candle_altar_2"))
			{
				Light_FadeBrightnessTo("candle_altar_spotlight", 0.f, .5f);
			}
		}
		
