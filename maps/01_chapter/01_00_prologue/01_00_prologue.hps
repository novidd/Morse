		//-------------------------------------------------------
		
		void OnInteract_Gramophone(const tString &in asEntity)
		{
			GramophoneHandler(asEntity);
		}
		
		//-------------------------------------------------------
		
		void GramophoneHandler(const tString &in asEntity)
		{
			Entity_SetVarBool(asEntity, "", !Entity_GetVarBool(asEntity, ""));
			bool mbPlayGramophone = Entity_GetVarBool(asEntity, "");
			Sound_CreateAtEntity("gramophone_button", "morse_entity/interact/button/button_interact", "Trigger_Gramophone_Sound", 0, false, .25f);
			
			if (mbPlayGramophone)
			{
				Prop_RotateToSpeed("gramophone_vinyl", 3.f, 2.f, cVector3f(0, 1, 0), false, "");
				Sound_CreateAtEntity("gramophone_track", "morse_events/gramophone/gramophone_track_1", "Trigger_Gramophone_Sound");
			}
			else
			{
				Prop_RotateToSpeed("gramophone_vinyl", -1.f, 0, cVector3f(0, 1, 0), true, "");
				Sound_Stop("gramophone_track", .1f);
			}
		}
		
