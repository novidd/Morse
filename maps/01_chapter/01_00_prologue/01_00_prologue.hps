		bool OnCollide_GhoulScare(const tString &in asParent, const tString &in asChild, int alState)
		{
			Map_RemoveTimer("Timer_GhoulSounds");
			Sound_Stop("Sound_GhoulSounds", 0.f);
			
			Sound_Play("Sound_Ghoul_Notice", 0.f);
